---
import { skills } from '../config/skills'
---

<div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-6">
  {
    skills.map((skill) => (
      <div class="flex flex-col items-center justify-center gap-1 sm:gap-4 bg-card-light dark:bg-card-dark dark:hover:bg-teal-blue-800/35 backdrop-filter-[blur(10px)_saturate(1.3)] dark:border-2 border-card-light dark:border-teal-blue-800/45 dark:hover:border-teal-blue-800 hover:-translate-y-1 rounded-2xl p-3 sm:p-5 transition-all duration-300 ease-in-out overflow-hidden">
        <skill.icon class="size-12 sm:size-16 md:size-20" />
        <h3 class="text-lg sm:text-xl md:text-2xl text-center font-bold text-primary-light dark:text-primary-dark">
          {skill.name}
        </h3>
      </div>
    ))
  }
</div>
