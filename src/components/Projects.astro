---
import LinkButton from './LinkButton.astro'
import { PROJECTS } from '../config/projects'
import GitHub from './icons/GitHub.astro'
import Link from './icons/Link.astro'
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }, index) => (
      <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
        <div class="w-full md:w-1/2">
          <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-teal-blue-800/50 lg:hover:border-teal-blue-700 lg:hover:bg-teal-blue-800/50">
            <img
              alt={`Imagen del proyecto ${title}`}
              class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
              loading={index === 0 ? 'lazy' : 'eager'}
              src={image}
            />
          </div>
        </div>

        <div class="w-full md:w-1/2 md:max-w-lg  my-auto">
          <h3 class="text-2xl font-bold text-teal-blue-900 dark:text-teal-blue-100">
            {title}
          </h3>

          <div class="flex flex-wrap mt-2">
            <ul class="flex flex-row mb-2 gap-x-2">
              {tags.map((tag) => (
                <li>
                  <span
                    class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                  >
                    <tag.icon class="size-4" variant="dark" />
                    {tag.name}
                  </span>
                </li>
              ))}
            </ul>

            <div class="mt-2 text-primary-light/90 dark:text-primary-dark/90">
              {description}
            </div>

            <footer class="flex items-end justify-start mt-4 gap-x-4">
              {github && (
                <LinkButton href={github}>
                  <GitHub class="size-6" variant="inverted" />
                  Code
                </LinkButton>
              )}
              {link && (
                <LinkButton href={link}>
                  <Link class="size-4" />
                  Preview
                </LinkButton>
              )}
            </footer>
          </div>
        </div>
      </article>
    ))
  }
</div>
